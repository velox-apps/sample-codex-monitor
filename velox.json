{
  "$schema": "https://velox-apps.github.io/velox/schema.json",
  "productName": "CodexMonitor",
  "version": "0.5.0",
  "identifier": "org.tirania.codexmonitor",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "cd ../CodexMonitor && npm run dev",
    "beforeBuildCommand": "cd ../CodexMonitor && npx vite build && cd ../velox-app && rm -rf frontend/dist && mkdir -p frontend && cp -r ../CodexMonitor/dist frontend/dist",
    "frontendDist": "frontend/dist"
  },
  "app": {
    "withGlobalVelox": true,
    "macOS": {
      "privateApi": true
    },
    "security": {
      "csp": null,
      "defaultPluginCommandPolicy": "allow"
    },
    "windows": [
      {
        "label": "main",
        "title": "CodexMonitor",
        "width": 1200,
        "height": 700,
        "minWidth": 360,
        "minHeight": 600,
        "transparent": true,
        "devtools": true,
        "customProtocols": [
          "app",
          "ipc"
        ],
        "url": "app://localhost/"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": "icons/icon.icns",
    "macos": {
      "minimumSystemVersion": "13.0",
      "infoPlist": "./Info.plist",
      "entitlements": "./Entitlements.plist",
      "hardenedRuntime": true,
      "dmg": {
        "enabled": true,
        "name": "CodexMonitor",
        "volumeName": "CodexMonitor"
      }
    }
  }
}
